  use_gropdf=no
  AC_REQUIRE([GROFF_AWK_PATH])
  AC_REQUIRE([GROFF_GHOSTSCRIPT_PATH])

  missing=
  test "$AWK" = missing && missing="'awk'"
  test "$GHOSTSCRIPT" = missing && missing="$missing 'gs'"
  if test -z "$missing"
